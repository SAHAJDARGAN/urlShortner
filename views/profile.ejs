<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>
  <div class="containerpers">
    <div class="cardpers">
      <h2 class="name">
        <%=user.username%>
      </h2>
      <h3 class="username">@<%=user.username%>
      </h3>
      <a href="/logout" class="button">Logout</a>
    </div>
    <br>
    <div style="display: flex; justify-content: space-between;">
      <!-- below form is required for making more urls -->
      <form action="/makeMoreUrls" method="post" enctype="multipart/form-data">
        <input type="url" name="originalUrl" placeholder="Enter Your Url here">
        <button type="submit">Submit</button>
      </form>

      <a href="/analytics">Analytics</a>
    </div>

    <style>
      .table-cell {
        padding: 40px;
        /* Adjust the padding value to your preference */
      }
    </style>
    <hr>
    <div class="container">
      <table>
        <thead>
          <tr>
            <th class="table-cell">Original URL</th>
            <th class="table-cell">Short ID</th>
            <!-- <th class="table-cell">Analytics(No. of Clicks)</th> -->
          </tr>
        </thead>
        <tbody>
          <% user.Urls.forEach(function(url) { %>
            <tr>
              <td class="table-cell">
                <%= url.redirectURL %>
              </td>
              <td class="table-cell"><a href="/redirect/<%= url.shortId %>">
                  <%= url.shortId %>
                </a>
              </td>
              <!-- <td class="table-cell" id="analytics-<%= url.shortId %>">
                <%=url.visitHistory.length%>
              </td> -->
            </tr>
            <% }) %>
        </tbody>
      </table>
      <hr>
    </div>
  </div>
</body>

</html>